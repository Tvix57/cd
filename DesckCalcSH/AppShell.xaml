<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DesckCalcSH.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DesckCalcSH.Pages"
    xmlns:main="clr-namespace:DesckCalcSH">

    <FlyoutItem Title="Calculator" Icon="calc.png"
                Route = "MainPage">
        <ShellContent
            Title="Calculator"
            ContentTemplate="{DataTemplate main:MainPage}"
            Icon="calc.png"
            Route="MainPageDetail" />
    </FlyoutItem>
    <FlyoutItem Title="Chart" Icon="chart.png"
                Route = "ChartPage">
        <ShellContent
            Title="Chart"
            ContentTemplate="{DataTemplate local:ChartPage}"
            Icon="chart.png"
            Route="ChartPageDetail" />
    </FlyoutItem>
    <FlyoutItem Title="History" Icon="history.png"
                Route = "HistoryPage">
        <ShellContent
            Title="History page"
            ContentTemplate="{DataTemplate local:HistoryPage}"
            Icon="history.png"
            Route="HistoryPageDetail" />
    </FlyoutItem>

    <FlyoutItem Title="About" Icon="about.png"
                Route = "AboutPage">
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Icon="about.png"
            Route="AboutPageDetail" />
    </FlyoutItem>
</Shell>
