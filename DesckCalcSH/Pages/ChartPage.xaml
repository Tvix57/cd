<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DesckCalcSH.Pages.ChartPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiSample;assembly=MauiSample"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui">

    <Grid
        Padding="5,0"
        BackgroundColor="Gray"
        ColumnSpacing="1"
        RowSpacing="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Editor
            x:Name="XminField"
            Grid.Row="0"
            Grid.Column="0"
            Margin="0"
            Background="White"
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalTextAlignment="End"
            Keyboard="Numeric"
            Placeholder="X min"
            TextColor="Orange"
            VerticalTextAlignment="Center" />
        <Editor
            x:Name="XmaxField"
            Grid.Row="0"
            Grid.Column="1"
            Margin="0"
            Background="White"
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalTextAlignment="End"
            Keyboard="Numeric"
            Placeholder="X max"
            TextColor="Orange"
            VerticalTextAlignment="Center" />
        <Editor
            x:Name="StepField"
            Grid.Row="0"
            Grid.Column="2"
            Margin="0"
            Background="White"
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalTextAlignment="End"
            Keyboard="Numeric"
            Placeholder="Calculate step"
            TextColor="Orange"
            VerticalTextAlignment="Center" />
        <Button
            Grid.Row="0"
            Grid.Column="3"
            Padding="0"
            Clicked="DrowGraph"
            FontSize="Large"
            Text="Drow graph"
            TextColor="Black" />
        <lvc:CartesianChart
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Series="{Binding Series}" />
    </Grid>
</ContentPage>