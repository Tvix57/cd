<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DesckCalcSH.Pages.HistoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="History">
    <ScrollView InputTransparent="False" VerticalScrollBarVisibility="Always">
        <ScrollView.Content>
            <StackLayout Margin="20">
                <Button Clicked="ClearAll" Text="Clear all" />
                <StackLayout x:Name="history_layout" Margin="20" />
            </StackLayout>
        </ScrollView.Content>
    </ScrollView>
</ContentPage>